<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>EDITAR USUARIO</h2>

            <form action="/edit?user_id={{_id}}" method="POST">

                <div class="form-group">
                    <label>Nombre de usuario</label>
                    <input type="text" class="form-control" name="username" placeholder='username' value="{{username}}">
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="name" placeholder='name' value="{{name}}">
                </div>
                <div class=" form-group">
                    <label>Contrase√±a</label>
                    <input type="text" class="form-control" name="password" placeholder='******'>
                </div>
                <div class="form-group">
                    <label>Imagen de perfil</label>
                    <input type="text" class="form-control" name="profileImg" placeholder='profile Img' value="{{profileImg}}">
                </div>
                <div class="form-group">
                    <label>Descripcion</label>
                    <input type="text" class="form-control" name="description" placeholder='description' value="{{description}}">
                </div>
                <div class=" form-group">
                    <label>Facebook Id</label>
                    <input type="text" class="form-control" name="facebookId" placeholder='facebook Id' value="{{facebookId}}">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <input type="text" class="form-control" name="role" placeholder='BOSS, DEV, TA, STUDENT, GUEST' value="{{role}}">
                </div>
                <button type="submit" class="btn btn-dark">Guardar</button>

            </form>

        </div>

    </div>

</div>